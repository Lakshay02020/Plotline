<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Checkout</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            padding: 20px;
        }

        .checkout-item {
            padding: 10px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .checkout-item h5 {
            margin-bottom: 0;
        }

        .tax-info {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <% function calculateTax(type, price) { %>
        <% let taxAmount = 0; %>
        <% if (type === 'product') { %>
            <% taxAmount = 200; %>
          <% if (price > 1000 && price <= 5000) { %>
            <% taxAmount = taxAmount + price * 0.12; %>
          <% } else if (price > 5000) { %>
            <% taxAmount = taxAmount + price * 0.18; %>
          <% } %>
        <% } else if (type === 'service') { %>
            <% taxAmount = 100; %>
          <% if (price > 1000 && price <= 8000) { %>
            <% taxAmount = taxAmount + price * 0.10; %>
          <% } else if (price > 8000) { %>
            <% taxAmount = taxAmount + price * 0.15; %>
          <% } %>
        <% } %>
        <% return parseFloat(taxAmount).toFixed(2); %>
      <% } %>

      <% let totalPrice = 0; %>
    <div class="col-md-12">
        <h1 class="text-primary">Checkout</h1>
        <% cartItems.forEach((item)=> { %>
            <div class="checkout-item shadow bg-white p-3">
                <h5 class="text-primary"><%= item.name%></h5>
                <p><span class="fw-bold">Price:</span>$<%= item.price%></p>
                <p><span class="fw-bold">Product Tax:</span> $<%= calculateTax('product', item.price) %></p>
                <p><span class="fw-bold">Service Tax:</span> $<%= calculateTax('service', item.price) %></p>
                <% totalPrice += parseFloat(item.price) + parseFloat(calculateTax('product', item.price)) + parseFloat(calculateTax('service', item.price)); %>
            </div>
        <% }) %>
        <div class="total-info shadow bg-white p-3">
            <h5>Total Price $<%= totalPrice.toFixed(2) %></h5>
        </div>
    </div>

    <div class="col-md-12">
        <div class="shadow bg-white p-3">
            <h4 class="text-primary">
                Basic Information
            </h4>
            <hr>

            <form action="/order/createOrder" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Full Name</label>
                        <input type="text" name="fullname" class="form-control" placeholder="Enter Full Name" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Phone Number</label>
                        <input type="number" name="phone" class="form-control" placeholder="Enter Phone Number" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Email Address</label>
                        <input type="email" name="email" class="form-control" placeholder="Enter Email Address" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Pin-code (Zip-code)</label>
                        <input type="number" name="pincode" class="form-control" placeholder="Enter Pin-code" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label>Full Address</label>
                        <textarea name="address" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label>Select Payment Mode: </label>
                        <select class="form-select" id="paymentMethod" name="paymentMethod">
                            <option value="cashOnDelivery">Cash on Delivery Mode</option>
                            <option value="onlinePayment">Online Payment Mode</option>
                        </select>
                    </div>
                    <input type="hidden" id="totalPrice" name="totalPrice" value="<%= totalPrice.toFixed(2) %>">
                    <button type="submit" class="btn btn-primary">Place Order</button>
                </div>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

  </body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Checkout</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            padding: 20px;
        }

        .checkout-item {
            padding: 10px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .checkout-item h5 {
            margin-bottom: 0;
        }

        .tax-info {
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="col-md-12">
        <h1 class="text-primary">Checkout</h1>
    
        <div class="checkout-item shadow bg-white p-3">
            <h5 class="text-primary">Product 1</h5>
            <p><span class="fw-bold">Price:</span> $1000</p>
            <p><span class="fw-bold">P Tax:</span> <span id="productTax1"></span></p>
            <p><span class="fw-bold">S Tax:</span> <span id="serviceTax1"></span></p>
        </div>
    
        <div class="checkout-item shadow bg-white p-3">
            <h5 class="text-primary"> Product 2</h5>
            <p><span class="fw-bold">Price:</span> $5500</p>
            <p><span class="fw-bold">P Tax:</span> <span id="productTax2"></span></p>
            <p><span class="fw-bold">S Tax:</span> <span id="serviceTax2"></span></p>
        </div>

        <div class="total-info shadow bg-white p-3">
            <h5>Total Price (Product + Tax): $<span id="totalPrice"></span></h5>
            <h5>Total Amount (Product + Tax + Service Tax): $<span id="totalAmount"></span></h5>
        </div>
    </div>

    <div class="col-md-12">
        <div class="shadow bg-white p-3">
            <h4 class="text-primary">
                Basic Information
            </h4>
            <hr>

            <form action="" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Full Name</label>
                        <input type="text" name="fullname" class="form-control" placeholder="Enter Full Name" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Phone Number</label>
                        <input type="number" name="phone" class="form-control" placeholder="Enter Phone Number" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Email Address</label>
                        <input type="email" name="email" class="form-control" placeholder="Enter Email Address" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Pin-code (Zip-code)</label>
                        <input type="number" name="pincode" class="form-control" placeholder="Enter Pin-code" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label>Full Address</label>
                        <textarea name="address" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label>Select Payment Mode: </label>
                        <div class="d-flex justify-content-start">
                            <button class="btn btn-link fw-bold" id="cashOnDeliveryTab-tab" data-bs-toggle="pill" data-bs-target="#cashOnDeliveryTab" type="button" role="tab" aria-controls="cashOnDeliveryTab" aria-selected="true">Cash on Delivery</button>
                            <button class="btn btn-link fw-bold" id="onlinePayment-tab" data-bs-toggle="pill" data-bs-target="#onlinePayment" type="button" role="tab" aria-controls="onlinePayment" aria-selected="false">Online Payment</button>
                        </div>
                    
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade" id="cashOnDeliveryTab" role="tabpanel" aria-labelledby="cashOnDeliveryTab-tab">
                                <h6>Cash on Delivery Mode</h6>
                                <hr/>
                                <button type="button" class="btn btn-primary">Place Order (Cash on Delivery)</button>
                            </div>
                            <div class="tab-pane fade" id="onlinePayment" role="tabpanel" aria-labelledby="onlinePayment-tab">
                                <h6>Online Payment Mode</h6>
                                <hr/>
                                <button type="button" class="btn btn-warning">Pay Now (Online Payment)</button>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </form>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Function to calculate tax based on the specified rules
        function calculateTax(type, price) {
            let taxAmount = 0;

            if (type === 'product') {
                if (price > 1000 && price <= 5000) {
                    taxAmount = price * 0.12;
                } else if (price > 5000) {
                    taxAmount = price * 0.18;
                } else {
                    taxAmount = 0;
                }
            } else if (type === 'service') {
                if (price > 1000 && price <= 8000) {
                    taxAmount = price * 0.10;
                } else if (price > 8000) {
                    taxAmount = price * 0.15;
                } else {
                    taxAmount = 0;
                }
            }

            return parseFloat(taxAmount).toFixed(2);
        }

        // Update tax for each product and service
        document.getElementById('productTax1').innerText = '$' + calculateTax('product', 1000);
        document.getElementById('productTax2').innerText = '$' + calculateTax('product', 5500);
        document.getElementById('serviceTax1').innerText = '$' + calculateTax('service', 3000);
        document.getElementById('serviceTax2').innerText = '$' + calculateTax('service', 9000);

        // Calculate and display combined tax
        const productTaxTotal = parseFloat(calculateTax('product', 1000)) + parseFloat(calculateTax('product', 5500));
        const serviceTaxTotal = parseFloat(calculateTax('service', 3000)) + parseFloat(calculateTax('service', 9000));
        const combinedTax = productTaxTotal + serviceTaxTotal;

        document.getElementById('combinedTax').innerText = '$' + combinedTax.toFixed(2);
    </script>

</body>

</html>

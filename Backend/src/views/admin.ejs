<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Product</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <style>
    /* Custom CSS for additional styling */
    body {
      padding: 50px;
    }
  </style>
</head>

<body>
  <div class="container">
    <h2 class="mt-5 mb-4">Upload Product</h2>

    <!-- Product Details Form -->
    <form id="productForm" action="/admin/create" method="post" enctype="multipart/form-data">
      <!-- Product Name -->
      <div class="form-group">
        <label for="productName">Product Name</label>
        <input type="text" class="form-control" id="productName" name="name" placeholder="Enter product name" required>
      </div>

      <!-- Product Price -->
      <div class="form-group">
        <label for="productPrice">Product Price</label>
        <input type="number" class="form-control" id="productPrice" name="price" placeholder="Enter product price" required>
      </div>

      <!-- Product Description -->
      <div class="form-group">
        <label for="productDescription">Product Description</label>
        <textarea class="form-control" id="productDescription" name="description" rows="3" placeholder="Enter product description" required></textarea>
      </div>

      <!-- Product Ratings (Default is 0) -->
      <div class="form-group">
        <label for="productRatings">Product Ratings</label>
        <input type="number" class="form-control" id="productRatings" name="ratings" placeholder="Enter product ratings" value="0" required>
      </div>

      <!-- Product Image Upload -->
      <div class="form-group">
        <label for="productImage">Product Image</label>
        <input type="file" class="form-control-file" id="productImage" name="image" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Upload Product</button>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>

</html>
